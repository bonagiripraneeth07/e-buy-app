<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E6E5E5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".drawer_about">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginLeft="110dp"
        android:layout_width="192dp"
        android:layout_height="match_parent"
        android:src="@drawable/about"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/ellipse"/>
    <ImageView
        android:layout_marginTop="-190dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/logo"/>

    <ImageView
        android:layout_marginTop="-100dp"
        android:layout_width="410dp"
        android:layout_height="800dp"
       android:layout_marginLeft="3dp"
        android:src="@drawable/about_text"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:src="@drawable/share_"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/whatsapp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/share_whatsapp"/>
    <ImageView
        android:layout_marginLeft="70dp"
        android:id="@+id/share_instagram"
        android:layout_width="80dp"
        android:layout_height="80dp"
        style="?android:borderlessButtonStyle"
        android:src="@drawable/insta"/>
        <ImageView
            android:layout_marginLeft="140dp"
            android:id="@+id/share_telegram"
            android:layout_width="80dp"
            android:layout_height="80dp"
            style="?android:borderlessButtonStyle"
            android:src="@drawable/telegram"/>
</RelativeLayout>
 <ImageView
     android:layout_marginTop="60dp"
     android:layout_marginLeft="20dp"
     android:layout_width="350dp"
     android:layout_height="wrap_content"
     android:src="@drawable/devbypraneeth"/>
<ImageView
    android:layout_marginLeft="150dp"
    android:layout_marginTop="-80dp"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:id="@+id/github_mine"
    android:src="@drawable/gitimg"/>

</LinearLayout>
</androidx.core.widget.NestedScrollView>

</LinearLayout>