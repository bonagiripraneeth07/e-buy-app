<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:id="@+id/toolbar_forall_components"
    android:layout_height="match_parent"
    tools:context=".onclickcomponents">
   <com.google.android.material.appbar.AppBarLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toobar_onclickcomponents"
        app:menu="@menu/items_onlick"
        android:layout_height="?attr/actionBarSize"/>
<LinearLayout
    android:layout_width="match_parent"
    android:background="#B1B0B0"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_height="2dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/order_wishlist_anim"
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="74dp"
        android:layout_marginBottom="50dp"
        app:lottie_autoPlay="false"
        app:lottie_rawRes="@raw/likeanimation" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:id="@+id/order_cart_anim"
        android:visibility="gone"
        app:lottie_loop="true"
        android:layout_marginRight="12dp"
        app:lottie_autoPlay="false"
        app:lottie_rawRes="@raw/cartanimation" />



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="500dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<ImageView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/order_background"/>-->

            <ImageView
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="15dp"
                android:id="@+id/order_shareid"
                android:src="@drawable/order_share" />
            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginLeft="90dp"

                android:layout_marginTop="15dp"
                android:id="@+id/order_addtobagid"
                android:src="@drawable/order_addtobag" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginLeft="250dp"

                android:layout_marginTop="15dp"
                android:id="@+id/order_savetowishlistid"
                android:src="@drawable/order_savetowishlist" />
            <ImageView
                android:id="@+id/nike_main_explore"
                android:layout_width="match_parent"
                android:layout_height="800dp"
               android:layout_marginTop="90dp"
                android:src="@drawable/order_delivery2" />
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>